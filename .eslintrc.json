{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "js": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "space-before-function-paren": "off",
    "react/forbid-prop-types": 0,
    "indent": "off",
    "react/jsx-indent": "off",
    "react/jsx-indent-props": "off"
  }
}
